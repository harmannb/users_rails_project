<form action="/users/create" method="post">

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">

  Email: <input type="text" name="user[email]" id="Email">

  Name: <input type="text" name="user[name]" id="Name">

  Password: <input type="text" name="user[password]" id="Password">

  Confirm Password: <input type="text" name="user[password_confirmation]" id="Password Confirmation">

  <button type="submit" name="Join" value="Join">Join</button>

</form>

<% if flash[:errors] %>
  <%= flash[:errors].each do |e| %>
   <%= e %>
  <% end %>
<% end %>
